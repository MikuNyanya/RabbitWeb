<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mikulink.dao.UserDao">
    <resultMap id="ResultMap" type="userInfo">
        <result property="id" column="id"/>
        <result property="createDate" column="create_date"/>
        <result property="modifyDate" column="modify_date"/>
        <result property="version" column="version"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
    </resultMap>

    <insert id="create" parameterType="userInfo">
        INSERT INTO users(id,create_date,state,NAME,pwd,email)
        VALUE(#{param.id},#{param.createDate},#{param.state},#{param.name},#{param.pwd},#{param.email})
    </insert>

    <update id="update" parameterType="userInfo">
        UPDATE users
        SET version = version+1,state = #{param.state},pwd = #{param.pwd},email = #{param.email}
        WHERE id = #{param.id},AND NAME = #{param.name}
    </update>

    <select id="getEntityById" resultMap="ResultMap">
        select * from users where id = #{userId}
    </select>

    <select id="getEntityByName" resultMap="ResultMap">
        select * from users where name = #{userName}
    </select>

</mapper>